<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundeditext"
    android:backgroundTint="@color/white"
    android:padding="12dp"
    android:layout_marginVertical="10dp"
    android:orientation="vertical">
    <!--đây là layout cho các phần tử trong recycler view-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="note title"
        android:textStyle="bold"
        android:id="@+id/recycler_view_note_title"
        android:textColor="@color/black"
        android:layout_marginVertical="4dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:id="@+id/recycler_view_note_content"
        android:layout_marginVertical="4dp"
        android:maxLines="2"
        android:text="this can be note content that can be long"
        android:textSize="17dp" />
    <TextView
        android:id="@+id/recycler_view_note_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginVertical="4dp"
        android:gravity="right"
        android:text="time stamp"
        android:textSize="12dp" />



</LinearLayout>